<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="64dp"
        android:id="@+id/input"
        android:layout_margin="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@id/result"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:id="@+id/result"
        android:layout_margin="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@id/layout1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"

        android:id="@+id/layout1">

        <LinearLayout
            android:id="@+id/innerLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"

            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonC"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"

                android:text="C"
                android:textAlignment="center"
                android:textSize="38dp"
                app:backgroundTint="#F4511E"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonB1"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="("
                android:backgroundTint="#00897B"
                android:textAlignment="center"
                android:textSize="38dp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonB2"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text=")"

                android:backgroundTint="#00897B"
                android:textAlignment="center"
                android:textSize="38dp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAc"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="AC"
                app:backgroundTint="#FFB300"
                android:textAlignment="center"
                android:textSize="26dp"
                app:cornerRadius="32dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/innerLay2">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="7"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button7"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="8"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button8"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="9"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button9"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="/"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/buttonD"
                android:backgroundTint="#FFFF00"
                android:layout_margin="10dp"
                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/innerLay3">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="4"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button4"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="5"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button5"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="6"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button6"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="*"
                android:textSize="50dp"
                android:backgroundTint="#FFFF00"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/buttonM"
                android:layout_margin="10dp"
                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/innerLay4">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="1"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button1"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="2"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button2"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="3"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button3"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="-"
                android:backgroundTint="#FFFF00"
                android:textSize="56dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/buttonS"
                android:layout_margin="10dp"
                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/innerLay5">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="0"
                android:textSize="38dp"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/button0"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="."
                android:textSize="40dp"

                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/buttonDot"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="="

                android:textSize="38dp"
                android:backgroundTint="#4213C6"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/buttonA"
                android:layout_margin="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                android:text="+"
                android:textSize="40dp"
                android:backgroundTint="#FFFF00"
                android:textAlignment="center"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:id="@+id/buttonE"
                android:layout_margin="10dp"
                />







        </LinearLayout>

    </LinearLayout>


</RelativeLayout>